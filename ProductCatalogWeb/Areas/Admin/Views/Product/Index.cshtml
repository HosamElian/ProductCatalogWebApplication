@model IEnumerable<ProductCatalog.Models.Entity.Product>;
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Product" asp-action="Upsert">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>
    <br /><br />


    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th class="bg-primary text-white" style="text-align: center">Name</th>
                <th class="bg-primary text-white" style="text-align: center">Price</th>
                <th class="bg-primary text-white" style="text-align: center">Quantity</th>
                <th class="bg-primary text-white" style="text-align: center">Available from</th>
                <th class="bg-primary text-white" style="text-align: center">Available to</th>
                <th class="bg-primary text-white" style="text-align: center">Duration</th>
                <th class="bg-primary text-white" style="text-align: center">Category</th>
                <th class="bg-primary text-white" style="text-align: center"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.Price.ToString("0.00")
                    </td>
                    <td>
                        @obj.Quantity
                    </td>
                    <td>
                        @obj.StartDate.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @obj.StartDate.AddDays(obj.DurationInDays).ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @obj.DurationInDays
                    </td>
                    <td>
                        @obj.Category.Name
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary bg mx-2" asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id"> <i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-danger mx-2" asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash-fill"></i> Delte</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

